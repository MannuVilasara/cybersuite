# Environment variables template
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/cybersec_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=cybersec_db
DATABASE_USER=postgres
DATABASE_PASSWORD=

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# MinIO / Object Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# OAuth Providers
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=http://localhost:3000/auth/github/callback

# AI Services
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
AI_MODEL=gpt-4-turbo-preview

# Error Tracking
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@cybersec-platform.com

# Application URLs
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
API_GATEWAY_URL=http://localhost:4000

# Microservice Ports (Backend Services)
AUTH_SERVICE_PORT=3001
SCANNER_SERVICE_PORT=3002
VAULT_SERVICE_PORT=3003
AI_SERVICE_PORT=3004
LOGS_SERVICE_PORT=3005

# Frontend Application Ports
WEB_APP_PORT=3000
DOCS_APP_PORT=3010
API_GATEWAY_PORT=4000

# Security
ENCRYPTION_KEY=your-encryption-key-min-32-characters-long
VAULT_MASTER_KEY=your-vault-master-key-change-this

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Subscription Tiers
FREE_TIER_SCAN_LIMIT=10
BASIC_TIER_SCAN_LIMIT=100
PRO_TIER_SCAN_LIMIT=-1

# Feature Flags
ENABLE_AI_AUTO_FIX=true
ENABLE_LOG_MONITORING=true
ENABLE_VAULT=true
