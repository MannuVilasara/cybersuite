# Server Configuration
PORT=3005
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/cybersec_logs

# Redis
REDIS_URL=redis://localhost:6379

# Log Retention
LOG_RETENTION_DAYS=90
ALERT_RETENTION_DAYS=365

# Alert Thresholds
CRITICAL_ALERT_THRESHOLD=1
HIGH_ALERT_THRESHOLD=5
MEDIUM_ALERT_THRESHOLD=10

# Notification Channels (Optional)
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_FROM=alerts@cybersec.local
EMAIL_TO=

# Auth Service
AUTH_SERVICE_URL=http://localhost:3001

# CORS
CORS_ORIGIN=http://localhost:3000
